	<body>
		{{> header}}

		<div class="form-container">
			<form id="myForm" action="/manage/inventory/add" method="post" enctype="multipart/form-data">
				<div id="first">
					
					<div class="custom-file-input form-div">
						<input multiple type="file" id="fileInput" class="hidden-input" name="fileInput" required>
						<label for="fileInput" id="image_label" class="custom-button">Select Images</label>
						<p id="form_message"></p>
						<div id="previewContainer"></div>
					</div>
					<div class="form-div">
						<label class="input_label" for="nameInput">Name:</label>
						<input class="input_field name" type="text" id="nameInput" name="nameInput" required>
					</div>
					<div class="form-div">
						<label class="input_label" for="quantityInput">Quantity:</label>
						<input class="input_field" type="number" id="quantityInput" name="quantityInput" required>
					</div>
					<div class="form-div">
						<label class="input_label" for="categorySelect">Category:</label>
						<select id="categorySelect" class="input_field" name="categorySelect" required>
							<option value="">Select category</option>
							<option value="ENGS">ENGS</option>
							<option value="TECH">TECH</option>
							<option value="LIFE">LIFE</option>
						</select>
					</div>
					<button class="form-btn" type="button" onclick="flip_section(1)">Next</button>
				</div>
		
				<div id="second">
					<div class="form-div">
						<label class="input_label" for="officeSelect">Office:</label>
						<select id="officeSelect" class="input_field" name="office" required>
							<option value=''>Select Office</option>
							{{#each office}}
								<option value="{{{this.name}}}">{{this.name}}</option>
							{{/each}}
						</select>
					</div>
					<div class="form-div">
						<label class="input_label" for="placeSelect">Place:</label>
						<select id="placeSelect" class="input_field" name="place">
							<option value=''>Select Place</option>
						</select>
					</div>
					<div class="form-div">
						<label class="input_label" for="unitSelect">Unit:</label>
						<select id="unitSelect" class="input_field" name="unit">
							<option value=''>Select Unit</option>
						</select>
					</div>
					<div class="form-div">
						<label class="input_label" for="shelfSelect">Shelf:</label>
						<select id="shelfSelect" class="input_field" name="shelf">
							<option value=''>Select Shelf</option>
						</select>
					</div>
					<div class="buttons">
						<button class="form-btn" type="button" onclick="flip_section(2)">Back</button>
						<button class="form-btn" type="submit">Submit</button>
					</div>
